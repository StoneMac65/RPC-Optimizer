{
  "manifest_version": 3,
  "name": "RPC Optimizer",
  "description": "Find the fastest RPC endpoints for your crypto wallet - optimize your trades",
  "version": "1.0.0",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "https://*.llamarpc.com/*",
    "https://*.ankr.com/*",
    "https://*.publicnode.com/*",
    "https://*.drpc.org/*",
    "https://*.solana.com/*",
    "https://*.binance.org/*",
    "https://*.polygon-rpc.com/*",
    "https://*.arbitrum.io/*",
    "https://*.optimism.io/*",
    "https://*.avax.network/*",
    "https://*.base.org/*",
    "https://1rpc.io/*",
    "https://cloudflare-eth.com/*"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}

